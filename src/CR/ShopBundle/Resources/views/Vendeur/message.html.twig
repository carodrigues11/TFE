{% extends 'CRShopBundle:Vendeur:menuvendeur.html.twig' %}

{% block vendeur %}
    <h5 class="titreVendeur">Mes messages</h5>
    {% for message in messages %}
        <div class="formulaireComment">
        <div class="comment" style="margin:25px 0;padding: 20px 15px 25px 15px; width: 450px; background-color: #fefefe; box-shadow: 3px 4px 16px #ddd; border-radius: 3px;">
            <div class="nomComment" style="font-size: 19px"><b>
                    {% for auteur in auteurs %}
                        {% if auteur.id == message.userId %}
                            {{ auteur.username }}
                        {% endif %}
                    {% endfor %}
                </b></div>
            <div class="nomComment" style="margin-top: 10px">{{ message.titre }}</div>
            <div class="nomComment" style="margin-top: 10px">{{ message.message }}</div>
            <div class="btnComment" style="text-align: right">
                <div class="supprimerComment" style="padding: 3px; color: #931969; margin-top: 10px; display: inline-block;"><i class="far fa-trash-alt"></i></div>
                <div class="repondreComment" style="padding: 3px; color: #931969; margin-top: 10px; display: inline-block;"><i class="fas fa-reply"></i></div>
            </div>
        </div>
    {% endfor %}







{% endblock %}