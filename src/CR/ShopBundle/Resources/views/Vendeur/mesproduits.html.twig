{% extends 'CRShopBundle:Vendeur:menuvendeur.html.twig' %}

{% block vendeur %}
    <h1>Mes produits</h1>



    {% for produit in produits %}
        <!-- Produit -->
        <div class="produitAll col-md-4" style="display:inline-block; width: 300px; border: 1px solid #eee; border-radius: 3px;">
            <!-- image qui ouvre une modal  -->
            <div class="imgProduit" style=" height: 250px; overflow: hidden;">
                <img  style="width: 90%; overflow: hidden; background-color: #0c5460; text-align: center;" src="{{app.request.basepath}}/directory/img/{{produit.image}}" alt="{{ produit.nom }}" />

            </div> <!-- Image modal - end -->

            <div class="contentProduit">
                <div class="nomProduit">{{ produit.nom }}</div>
                <div class="prixProduit">{{ produit.prix }} â‚¬/Kg</div>

            </div>
            <div>
                <button class="btn-primary btn">X</button>
                <button class="btn-primary btn">Modifier</button>
            </div>
        </div>


    {% endfor %}

        {% endblock %}